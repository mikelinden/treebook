<!DOCTYPE html>
<html>
<head>
  <title>Cnanet</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <a class="brand" href="#">CNAnet</a>
	    <ul class="nav">
	      <li class="active"><a href="#">Home</a></li>
	      <li><a href="#">Opine</a></li>
	      <li><a href="#">Entrevistas</a></li>
	      <li><a href="#">Anivers√°rios</a></li>
	      <li><a href="#">Agenda</a></li>
	      <li><%= link_to "Status", feed_path %></li>
	    </ul>
	    <ul class="nav pull-right">
	    	<% if user_signed_in? %>
	    		<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
	     		<li><%= link_to "logout", logout_path%></li>
	    	<% else %>
	      		<li><%= link_to "Registrar", cadastro_path %></li>
	      		<li><%= link_to "Entrar", login_path %></li>
	      	<% end %>
	    </ul>
	  </div>
	</div>
	

	<div class="container">
		
		<% flash.each do |type, message| %>
		 <div class="alert <%= flash_class type %>">
		 	<button class="close" data-dismiss="alert">x</button>
		 	<%= message %>
		 </div>
		<% end %>
    </div>
    <div class="container">
		<%= yield %>
	</div>
</body>
</html>
