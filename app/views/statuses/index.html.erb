<div class="page-header">
<h1>Fique por dentro</h1>
</div>

<%= link_to "Postar novo status", new_status_path , class: "btn btn-success"%>

<% @statuses.each do |status|%>
	<div class="status">
		<div class="row">
			<div class="span1">
				<%= image_tag status.user.gravatar_url %>
			</div>
			<div class="span7">
				<p><strong><%= status.user.full_name%></strong></p>
				<p><%= status.content%></p>
				<div class="meta">
					<%= link_to time_ago_in_words(status.created_at) + " atrÃ¡s", status%> |
					<span class="admin">
							<%= link_to "Editar", edit_status_path(status)%> |
							<%= link_to "Apagar", status, method: :delete, data: {confirm: "Tem certeza que deseja apagar esse post?"}%>
					</span>
				</div>
			</div>
		</div>
	</div>
<% end %>
